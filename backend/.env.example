# AI Event Scanner v2.0 Environment Configuration

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./ai_events.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./ai_events.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost/ai_events
# ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@localhost/ai_events

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Application Settings
APP_ENV=development
DEBUG=true
SERVE_STATIC=false

# Session Configuration
SESSION_LIFETIME_DAYS=30
COOKIE_SECURE=false  # Set to true in production with HTTPS

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
PERPLEXITY_RATE_LIMIT_DELAY=1.0

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring (optional)
SENTRY_DSN=
HONEYCOMB_API_KEY=
